{
  "name": "salesforce-visual-documentation",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node ./server/server.js & NODE_ENV=development webpack --mode=development --watch",
    "format": "prettier --config .prettierrc --write './*.js' './server/*.js' 'src/**/*.{js,vue,html}'",
    "lint": "vue-cli-service lint",
    "local:prestart": "webpack --mode=production",
    "heroku-prebuild": "yarn install --production=false",
    "heroku-postbuild": "webpack --mode=production --progress",
    "start": "node ./server/server.js"
  },
  "dependencies": {
    "express": "^4.16.4",
    "showdown": "^1.9.0",
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.4",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "dotenv": "^6.0.0",
    "dotenv-webpack": "^1.5.7",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "1.15.3",
    "style-loader": "^0.21.0",
    "vue-loader": "^15.2.4",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8",
    "webpack-livereload-plugin": "^2.1.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
